= form_for @ticket do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer_id
    = f.select(:customer_id, options_from_collection_for_select(Customer.all, :id, :name),)
  .field
    = f.label :gig_id
    = f.select(:gig_id, options_from_collection_for_select(Gig.all, :id, :band),)
  .field
    = f.label :paid
    = f.check_box :paid
  .actions
    = f.submit 'Save'
